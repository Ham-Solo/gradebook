<h1>Student List</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher</th>
      <th>Parent</th>
      <th>Assignment</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher.students.each do |s| %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.teacher.name %></td>
          <td><%= s.parent.name %></td>
      <% s.assignments.each do |a|%>
          <td><%= a.name %></td>
          <td><%= a.grade %></td>
          <td><%= link_to 'Show', edit_student_path(s) %></td>
          <td><%= link_to 'Edit', edit_student_path(s) %></td>
          <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end  %>
    <% end %>
  </tbody>
</table>

<br>
